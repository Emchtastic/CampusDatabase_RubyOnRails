<p id="notice"><%= notice %></p>

<h1>Welcome to the campus teacher page </h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Nine hundred</th>
      <th>Email</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name %></td>
        <td><%= teacher.last_name %></td>
        <td><%= teacher.nine_hundred %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.office_id %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>

<br><br>

<%=form_tag(search_teachers_url, method: "get") do%>
  <%=label_tag(:query, "Search for (last name):") %>
  <%=text_field_tag(:query) %>
  <%=submit_tag("Search") %>
<%end%>

<br><br>

<table>
  <thead>
    <tr>
      <th>Navigation</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=link_to 'Sections', sections_path%></td>
      <td><%=link_to 'Courses', courses_path%></td>
      <td><%=link_to 'Offices', offices_path%></td>
    </tr>

